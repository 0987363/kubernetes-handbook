{
    "title": "Kubernetes Handbook",
    "author": "Pengfei Ni",
    "gitbook": ">= 3.2.2",
    "language": "zh-cn",
    "plugins": [
        "alerts",
        "mermaid",
        "github",
        "github-buttons",
        "page-treeview",
        "editlink",
        "-lunr",
        "-search",
        "page-footer-ex",
        "search-plus"
    ],
    "pdf": {
        "toc": true,
        "pageNumbers": true,
        "fontSize": 11
    },
    "pluginsConfig": {
        "page-treeview": {
            "copyright": "Copyright &#169; Pengfei Ni",
            "minHeaderCount": "2",
            "minHeaderDeep": "2"
        },
        "page-footer-ex": {
            "copyright": "<a href=\"https://github.com/feiskyer/kubernetes-handbook\">Kubernetes Handbook</a>",
            "update_label": "Updated @",
            "update_format": "YYYY-MM-DD HH:mm:ss"
        },
        "github-buttons": {
            "repo": "feiskyer/kubernetes-handbook",
            "types": [
                "star",
                "watch"
            ],
            "size": "small"
        },
        "github": {
            "url": "https://github.com/feiskyer/kubernetes-handbook"
        },
        "editlink": {
            "base": "https://github.com/feiskyer/kubernetes-handbook/blob/master/",
            "label": "编辑本页"
        }
    },
    "generator": "site"
}
